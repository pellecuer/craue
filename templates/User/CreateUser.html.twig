{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
    <div>
    Steps:
        {% include '@CraueFormFlow/FormFlow/stepList.html.twig' %}
    </div>
    {{ form_start(form) }}
        {{ form_errors(form) }}

        {% if flow.getCurrentStepNumber() == 1 %}
            <div>
                En selectionnant un email, vous allez choisir un mdp dans la prochaine étape.<br />
                {{ form_row(form.email) }}
            </div>    
        {% endif %}



        {{ form_rest(form) }}

        {% include '@CraueFormFlow/FormFlow/buttons.html.twig' with {
		craue_formflow_button_class_last: 'btn btn-primary',
		craue_formflow_button_class_back: 'btn',
		craue_formflow_button_class_reset: 'btn btn-warning',

        craue_formflow_button_label_back: 'Précédent',
        craue_formflow_button_label_next: 'Suivant',
        craue_formflow_button_label_finish: 'Valider',
		craue_formflow_button_label_reset: 'Reset', 
	        } %}
        
    {{ form_end(form) }}
{% endblock %}